{
  "name": "unique-ui",
  "version": "0.10.0",
  "description": "A mobile component library for Vue2.x",
  "main": "lib/index.js",
  "license": "MIT",
  "homepage": "https://xiaojun1994.github.io/unique-ui/",
  "repository": "git@github.com:xiaojun1994/unique-ui.git",
  "author": "xiaojun1994 <362896731@qq.com>",
  "scripts": {
    "dev": "webpack-dev-server --hot --inline --progress --config build/webpack.dev.conf.js",
    "build:entry": "node build/build-entry.js",
    "build:components": "webpack --color --progress --config build/webpack.prod.conf.js",
    "build:theme": "gulp build --gulpfile packages/theme/gulpfile.js",
    "build:lib": "rm -rf lib && npm run build:entry && npm run build:components && npm run build:theme",
    "build:doc": "webpack --color --progress --config build/webpack.doc.conf.js",
    "release": "sh build/release.sh",
    "lint": "eslint --ext .js,.vue src packages",
    "lint:fix": "eslint --fix --ext .js,.vue src packages"
  },
  "files": [
    "lib",
    "packages",
    "src"
  ],
  "dependencies": {
    "@babel/runtime": "^7.4.5",
    "font-awesome": "^4.7.0",
    "normalize.css": "^8.0.1",
    "qrcode": "^1.3.3",
    "raf": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-object-assign": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@vue/babel-preset-jsx": "^1.0.0",
    "autoprefixer": "^9.3.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^1.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-vue": "^5.2.2",
    "eslint-plugin-vue-libs": "^3.0.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^6.1.0",
    "gulp-cssmin": "^0.2.0",
    "gulp-sass": "^4.0.2",
    "highlight.js": "^9.13.1",
    "html-webpack-plugin": "^3.2.0",
    "markdown-to-vue-loader": "^1.0.1",
    "node-sass": "^4.11.0",
    "postcss": "^8.2.10",
    "postcss-loader": "^3.0.0",
    "progress-bar-webpack-plugin": "^1.12.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "vue": "^2.6.10",
    "vue-loader": "^15.7.0",
    "vue-progressbar": "^0.7.5",
    "vue-router": "^3.0.6",
    "vue-template-compiler": "^2.6.10",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1",
    "webpack-node-externals": "^1.7.2"
  },
  "peerDependencies": {
    "vue": ">= 2.5.0"
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 7"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
